MDScreen:
    MDIconButton:
        pos_hint: {'center_x': .5, 'center_y': .8}        
        icon: 'python.png'
        user_font_size: '64sp'            
    MDTextField:
        id: email
        hint_text: 'E-mail'        
        helper_text: 'example@gmail.com'
        helper_text_mode: 'on_focus'
        pos_hint: {'center_x': .5, 'center_y': .6} 
        size_hint_x: .5  
        icon_right:'email'  
        icon_right_color: .5,.6,0,1             
    MDTextField:
        id: senha           
        size_hint_x: .5
        hint_text: "Senha"        
        pos_hint: {'center_x': .5, 'center_y': .5}
        password: True
        password: '*'
        icon_right: 'eye-off'  
        icon_right_color: .5,.6,0,1                     
    MDRaisedButton:        
        text: 'Login'        
        pos_hint: {'center_x': .5, 'center_y': .4}
        size_hint_x: .3
        on_press: app.get_email()        
        on_press: app.get_senha() 
        on_release:app.validacao()               
    MDTextButton:        
        id: cadastrar
        text: "Cadastre-se"
        pos_hint: {'center_x': .5, 'center_y': .2}
        halign: "center"        
        on_release: app.cadastrar()                                    
    MDTextButton:
        text: "Esqueceu sua senha?"
        pos_hint: {'center_x': .5, 'center_y': .1}
        halign: "center"


    

    
     
   
  
    
